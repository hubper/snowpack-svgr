{
  "private": true,
  "workspaces": [
    "packages/snowpack-svgr",
    "packages/example",
    "packages/external-example"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "scripts": {
    "start": "yarn workspace snowpack-svgr run start",
    "build": "yarn workspace snowpack-svgr run build",
    "test": "yarn workspace snowpack-svgr run test",
    "lint": "yarn workspace snowpack-svgr run lint"
  },
  "devDependencies": {
    "prettier": "^2.2.1"
  }
}
